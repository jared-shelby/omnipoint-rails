<h1><%= @business.name %></h1>
<a href=<%="/appointments/new?business_id=#{@business.id}"%>>Make an appointment</a>

<p>Please choose a service:</p>

<%= form_tag("/technicians", method: :get) do %>
    <%= hidden_field_tag "business_id", @business.id %>
    <%= select_tag "service_id", options_from_collection_for_select(@services, "id", "name") %>
    <%= submit_tag "Next: choose a technician" %>
<% end %>