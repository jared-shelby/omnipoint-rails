<% if flash[:notice] %>
    <div class="message is-dark">
        <div class="message-body has-text-left">
            <%= flash[:notice] %>
        </div>
    </div>
<% end %>

<h1 class="title"><%= @business.name %></h1>
<h2 class="subtitle"><%= @business.location %></h2>

<%= link_to "Schedule Appointment", new_appointment_path(business_id: @business.id), class: "button is-dark" %>
<br/>
<%= link_to "Edit Business Details", edit_business_path(@business), class: "button is-light mt-4" %>
