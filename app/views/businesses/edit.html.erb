<h1 class="title">Edit Business Details</h1>
<h2 class="subtitle">Use the form below to edit <em><%= @business.name %></em> details.</h2>

<%= form_for(@business) do |f| %>
    <div class="field">
      <%= f.label :name, class: "label has-text-left" %>
      <%= f.text_field :name, class: "input"  %>
    </div>
    <div class="field">
      <%= f.label :location, class: "label has-text-left" %>
      <%= f.text_field :location, class: "input" %>
    </div>
    <%= f.submit "Update", class: "button is-light" %>
<% end %>
